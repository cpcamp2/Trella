
<h4><%= link_to 'New Task', new_task_path, class: 'btn btn-info btn-lg btn-block' %></h4>

<div class = 'row'>
  <div class = 'col-md-4'>
    <h3 class = 'text-center'>To Do</h3>
    <%= render @to_do %>
  </div>

  <div class = 'col-md-4'>
    <h3 class = 'text-center'>In Progress</h3>
    <%= render @doing %>

  </div>

  <div class = 'col-md-4'>
    <h3 class = 'text-center'>Complete</h3>
    <%= render @done %>
  </div>
</div>